<!-- Olga style edits 2/11 -->

@using MathQuiz.Models
@model LoginViewModel
@{
    ViewBag.Title = "Welcome";
}

@section Styles{
    <style>
        .welcomeBanner {
            font-family: 'Cooper', Tahoma, Geneva, Verdana, sans-serif;
            font-size:40px;
            margin-left:auto;
            margin-right:auto;
            color:darkseagreen;
            text-align:center;
        }

        .formCenter {
            text-align:center;
            margin-left:auto;
            margin-right:auto;
        }
        .form-control, checkCenter{
            text-align:center;
            margin-left:auto;
            margin-right:auto;
            float:none !Important;
        }

        input[type='checkbox'] {
            float:none !Important;
        }

        .enterBtn {
            background-color:indianred;
            color:white;
        }

        .guestBtn {
            background-color:slateblue;
            color:white;
        }

    </style>    
}
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form formCenter", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <div class="fontGreen centerHeading">Welcome to <br />Math Quiz</div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                    </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkCenter" })
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                        <div class="form-group">
                            <!-- <input type="submit" value="Enter" class="btn btn-default enterBtn" /> -->
                            <!-- red button from bootstrap -->
                             <input type= "submit" value= "Enter" class="btn btn-danger btn-lg" /> 

                        </div>

                        <div class="form-group">
                            @*<input type="submit" value="Play as guest" class="btn btn-default guestBtn" />*@
                           @* @Html.ActionLink("Play as Guest", "Login",null,new { @class = "btn btn-default guestBtn" })*@
                            
                            <!-- large blue button from bootstrap -->
                             @Html.ActionLink("Play as Guest", "Index", "Home", null, new { @class = "btn btn-primary btn-md"})
                        </div>


                }
            </section>
        </div>

        <div class="col-md-2"></div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}